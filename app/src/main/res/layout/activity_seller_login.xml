<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Seller.SellerLoginActivity">

    <ImageView
        android:id="@+id/imgsellerlogin"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sellerlogin" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgsellerlogin"
        android:padding="18dp"
        android:textSize="18dp"
        android:hint="Phone or Username"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edtnameseller"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtnameseller"
        android:padding="18dp"
        android:textSize="18dp"
        android:hint="Password"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:id="@+id/edtpassseller"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:id="@+id/lnseller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtpassseller"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnresseller"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="@color/teal_200"
            android:text="Register"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnlogseller"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@color/teal_200"
            android:text="Login"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>