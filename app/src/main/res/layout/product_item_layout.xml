<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/txtpname"/>

        <ImageView
            android:id="@+id/imgproductpic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/txtpname"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtpricep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgproductpic"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:text="Product Price"
            android:textColor="@color/black"
            android:textSize="19dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_below="@+id/txtpricep"
            android:textColor="@color/black"
            android:id="@+id/txtproductdesciption"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>