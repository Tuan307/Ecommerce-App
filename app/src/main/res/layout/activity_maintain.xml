<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.MaintainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:id="@+id/rltmaitain">
       <ImageView
           android:layout_width="280dp"
           android:layout_height="250dp"
           android:layout_centerHorizontal="true"
           android:id="@+id/imganhmaintain"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/imganhmaintain"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/nhaplogin"
           android:hint="Product Name"
           android:padding="15dp"
           android:textSize="18dp"
           android:id="@+id/edtnamemaintain"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/edtnamemaintain"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/nhaplogin"
           android:hint="Product Description"
           android:padding="15dp"
           android:textSize="18dp"
           android:id="@+id/edtdesmaintain"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/edtdesmaintain"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/nhaplogin"
           android:hint="Product Price"
           android:padding="15dp"
           android:textSize="18dp"
           android:id="@+id/edtpricemaintain"/>


   </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"
        android:text="Apply Changes"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/btnapplychange"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Product"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/btndeleteproduct"/>
</RelativeLayout>